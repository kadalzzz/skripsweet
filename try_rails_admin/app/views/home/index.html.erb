<head>
   <%= javascript_include_tag 'nearby_places_weather.js' %>
</head>
<body>
<div class="span7">
  <div class="hero-unit span6">  
    <div class=span2>
            
            <p> <%= @city %>, <%= @state%> </p>
            <p> <%= @country %> </p>
            <p> <%= @zip_code %> </p>
          </div>
  </div>
  
  <div class="row-fluid">
    <% i = 1 %>
    <% @products.each do |product| %>
      <% unless i==4 %>
        <div class="span4">
          <h2><%=  product.name %> </h2>
          <p class="thumbnail" style="width: 185px; height: 80px; overflow: hidden !important;">
                <% if product.photo.exists? then %>
                  <%= image_tag product.photo.url(:small) %>
                <% else %>
                          No Preview
            <% end %>
          </p>  
          <p><%= raw truncate(product.description, :length => 50) %></p>
          <p>
            <a class='btn' href=<%= product_path(product.id) %>>View Detail</a>   
         </p>
        </div>
        <%i=i+1%>
      <%else%>
        </div>
        <div class="row-fluid">
         <div class="span4">
          <h2><%=product.name %> </h2>
          <p class="thumbnail" style="width: 185px; height: 80px; overflow: hidden !important;">
            <% if product.photo.exists? then %>
	            <%= image_tag product.photo.url(:small) %>
	          <% else %>
	            No Preview
            <% end %>
          </p>  
          <p><%= truncate(product.description, :length => 50) %></p>
          <p>
            <a class='btn' href=<%= product_path(product.id) %>>View Detail</a>
         </p>
        </div>
       
        <% i=1 %>
      <%end%>
    <%end%>
  </div>
</div>

</body>
