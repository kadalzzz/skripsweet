<table class="table table-striped table-bordered  table-condensed">
  <tr>
    <td rowspan="2">
      VALUE
    </td>
    <th>Standard</th>
    <th>Satisfaction</th>
    <th>Total User</th>
    <th>Modernity</th>  
  </tr>
  
  <tr>
    <td> <%= @value.standard_a%> </td>
    <td> <%= @value.satisfaction_a%> </td>
    <td> <%= @value.total_user_a%> </td>
    <td> <%= @value.modernity_a%> </td>
  </tr>
</table>

<table class="table table-striped table-bordered  table-condensed">

  <tr>
    <th>Rank</th> 
    <th>Name</th>
    <th>Category</th>
    <th>Link</th>
    <th>Standard</th>
    <th>Satisfaction</th>
    <th>Total User</th>
    <th>Modernity</th>
    <th>Total Score</th>
  </tr>
  <% rank = 1 %>
  <% @products.each do |product| %>
    <tr>
      <td> <%= rank %> </td>
      <td>
        <%= link_to product.name, product_path(product.id) %> <br />
        <%= image_tag product.photo.url(:thumb) %>
      </td>
      <td><%= product.category.name%> </td>
      <td><%= product.link %></td>
     
      <td><%= product.standard %> </td>
      <td><%= product.satisfaction %> </td>
      <td><%= product.total_user %> </td>
      <td><%= product.modernity %> </td>
      <td><%= product.total_score %> </td>  
    </tr>
    <% rank = rank + 1 %>
  <%end%>
</table>


